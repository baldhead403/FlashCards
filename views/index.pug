
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
        link(rel='stylesheet' href="/styles.css")
        
        title Flash Cards App
    .jumbotron.jumbotron-fluid
      h1 Trivia Flash Card
    .container
      div(class="flip-card")
       div(class="flip-card-inner")
        div(class="flip-card-front")
             #question
             br
             #hint
             button#answerButton(type="submit") Answer
             button#hintButton(type="submit") Hint
        div(class="flip-card-back")
            #answer
            button#backButton(type="submit") Go Back ↩️ 

    .modal
        .modal-content
            input#mquest(type="text", name="question")
            input#mhint(type="text", name="hint")
            input#manswer(type="text", name="answer")
            button#qaButton(type="submit") Submit
            button#clear(type="submit") Clear


    script(src="scripts.js")
